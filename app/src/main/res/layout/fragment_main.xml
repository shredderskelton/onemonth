<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/Android_Design_rhythmThird">

    <TextView
        android:id="@+id/directions_text_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/directions_welcome_started"
        android:textSize="@dimen/textSizeHeading"/>

    <TextView
        android:id="@+id/directions_text_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/directions_detailed_started"/>

    <LinearLayout
        android:id="@+id/directions_days_sober_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/Android_Design_rhythmHalve">

        <TextView
            android:id="@+id/directions_text_days_sober"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/directions_days_sober"/>

        <TextView
            android:id="@+id/directions_text_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/textSizeHeading"
            tools:text="12"/>

        <TextView
            android:paddingTop="@dimen/Android_Design_rhythmThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/directions_days_sober_question"/>

        <Button
            android:text="@string/checkin"
            android:id="@+id/directions_check_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/directions_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/directions_reset"/>
    </LinearLayout>

    <Button
        android:id="@+id/directions_stop_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/directions_stop"/>
</LinearLayout>