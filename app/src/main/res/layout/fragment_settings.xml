<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/Android_Design_rhythmThird">

    <EditText
        android:id="@+id/settings_timestamp_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_timestamp_override"/>

    <Button
        android:id="@+id/settings_timestamp_entry_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/settings_override"/>

</LinearLayout>