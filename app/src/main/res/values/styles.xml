<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Dry.Button.Borderless</item>
        <item name="android:textViewStyle">@style/Dry.TextView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dry.Button.Borderless" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/background_button_borderless_selector</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@drawable/text_color_button_borderless_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minHeight">@dimen/Android_Design_rhythm</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/Android_Design_rhythmThird</item>
    </style>

    <style name="Dry.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
